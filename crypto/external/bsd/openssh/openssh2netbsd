# openssh2netbsd:  convert an openssh source tree into netbsd openssh tree

if [ -z "$1" ]; then
	echo "Usage: $0 <dir>" 1>&2
	exit 1
fi

set -e
cd "$1"

### Remove CVS
find . -name CVS -print | xargs rm -r

### Remove Makefile and subdirs
rm -f Makefile Makefile.inc
rm -fr ssh-add ssh scp ssh-agent sshd sftp-server ssh-keygen sftp ssh-keyscan ssh-keysign ssh-pkcs11-helper ssh-sk-helper sshd-session

exit 0
