#fi
#rm -f "$resolved_delegate_dir/resolvconf-"*".dns-delegate"
# XXX Test that removing delegate files unloads them from resolved via SIGHUP.
#for d in $DOMAINS; do
#	dn="${d%%:*}"
#	ns="${d#*:}"
