#	dconf="${dconf}DNS=$ns$NL"
#	printf %s "$dconf" >"$resolved_delegate_dir/resolvconf-$dn.dns-delegate"
#done

printf %s "$conf" >"$systemd_resolved_conf"
pid=$(pidof systemd-resolved)
if [ -n "$pid" ]; then
	kill -HUP $pid
fi
