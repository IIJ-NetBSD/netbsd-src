# $NetBSD: xorg.conf.jpkbd,v 1.3.34.1 2023/08/12 12:47:47 martin Exp $

Section "ServerLayout"
	Identifier	"wsfb"
	Screen	0	"Screen0" 0 0
	InputDevice	"Mouse0" "CorePointer"
	InputDevice	"Keyboard0" "CoreKeyboard"
EndSection

Section "Files"
	FontPath	"/usr/pkg/share/fonts/X11/TTF/"
EndSection

Section "ServerFlags"
	# Explicitly prefer keyboard options defined in xorg.conf
	Option		"AutoAddDevices" "false"
EndSection

Section "InputDevice"
	Identifier	"Keyboard0"
	Driver		"kbd"
	Option		"Protocol"	"wskbd"
	Option		"Device"	"/dev/wskbd0"
#	Option		"XkbLayout"	"us"
	Option		"XkbLayout"	"jp(106)"
#	Option		"XkbOptions"	"ctrl:swapcaps"
EndSection

Section "InputDevice"
	Identifier	"Mouse0"
	Driver		"mouse"
	Option		"Protocol"	"wsmouse"
	Option		"ButtonMapping"	"1 2 3 2"
EndSection

Section "Device"
	Identifier	"Wsdisplay0"
	Driver		"wsfb"
EndSection

Section "Monitor"
	Identifier	"Monitor"
EndSection

Section "Screen"
	Identifier	"Screen0"
	Device		"Wsdisplay0"
	Monitor		"Monitor"

	SubSection "Display"
		Viewport	0 0
		Depth		16
	EndSubSection
EndSection
